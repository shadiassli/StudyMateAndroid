<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card1_row_elemnt"
    app:cardBackgroundColor="@color/transparent"
    app:cardElevation="4dp"
    android:layoutDirection="ltr"
    >
>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/transparent"
      android:layoutDirection="ltr"
      android:layout_marginBottom="20dp"

      >

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:id="@+id/card1_image"
       android:src="@drawable/ic_default_avatar"
      android:layoutDirection="ltr"
      />
    <ImageView
        android:id="@+id/card1_menu"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        />
    <TextView
        android:id="@+id/card1_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/card1_image"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layoutDirection="ltr"
        />

  <TextView
      android:id="@+id/card1_question_txt"
      android:layout_below="@id/card1_image"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:textSize="14sp"
      android:textColor="@color/black"
      android:layoutDirection="ltr"
      android:autoLink="all"
      />
    <TextView
        android:id="@+id/card1_ans_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1_question_txt"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:layoutDirection="ltr"
        />


    <EditText
        android:id="@+id/card1_ans_et"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/card1_post_ans_btn"
        android:layout_toStartOf="@+id/card1_post_ans_btn"
        android:background="@drawable/rounded_edittext"
        android:ems="1"
        android:hint="@string/type_down_an_answer"
        android:inputType="textAutoComplete"
        android:textColor="@color/black"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layoutDirection="ltr"
        />
      <Button

          android:id="@+id/card1_post_ans_btn"
          android:layout_width="30dp"
          android:layout_height="36dp"
          android:background="@drawable/ic_send"
          android:layout_below="@id/card1_ans_count_tv"
          android:layout_alignParentEnd="true"
          android:layout_marginEnd="10dp"
          android:layoutDirection="ltr"
          />


  </RelativeLayout>

</android.support.v7.widget.CardView>